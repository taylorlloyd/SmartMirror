<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ca.taylorlloyd.smartmirror.FullscreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:13 PM"
        android:id="@+id/timeTxt"
        android:textColor="@color/colorText"
        android:textSize="@dimen/xLargeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday, March 16"
        android:id="@+id/dateTxt"
        android:textColor="@color/colorText"
        android:textSize="@dimen/largeText"
        android:layout_below="@+id/timeTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sectionMargin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--\u2103"
        android:id="@+id/tempTxt"
        android:textColor="@color/colorText"
        android:textSize="@dimen/xLargeText"
        android:layout_alignTop="@+id/highTempTxt"
        android:layout_toRightOf="@+id/weatherImg"
        android:layout_toEndOf="@+id/weatherImg"
        android:layout_marginLeft="@dimen/textMargin"
        android:layout_marginRight="@dimen/textMargin"
        android:layout_alignBottom="@+id/weatherImg"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="@dimen/weatherIcon"
        android:layout_height="@dimen/weatherIcon"
        android:id="@+id/weatherImg"
        android:layout_below="@+id/dateTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="@dimen/xLargeText"
        android:maxWidth="@dimen/xLargeText"
        android:minHeight="@dimen/xLargeText"
        android:minWidth="@dimen/xLargeText"
        android:src="@drawable/partly_cloudy_day" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High: --\u2103"
        android:id="@+id/highTempTxt"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/smallText"
        android:layout_below="@+id/dateTxt"
        android:layout_toRightOf="@+id/tempTxt"
        android:layout_toEndOf="@+id/tempTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low: --\u2103"
        android:id="@+id/lowTempTxt"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/smallText"
        android:layout_alignBottom="@+id/tempTxt"
        android:layout_toRightOf="@+id/tempTxt"
        android:layout_toEndOf="@+id/tempTxt" />
</RelativeLayout>
